{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EDA Results Schema",
  "type": "object",
  "required": ["top_insights", "hypotheses"],
  "properties": {
    "top_insights": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "hypotheses": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "visualizations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "properties": {
          "type": {"type": "string"},
          "path": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "correlations": {
      "type": "object",
      "properties": {
        "high_correlations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["feature1", "feature2", "correlation"],
            "properties": {
              "feature1": {"type": "string"},
              "feature2": {"type": "string"},
              "correlation": {"type": "number", "minimum": -1, "maximum": 1}
            }
          }
        }
      }
    },
    "outliers": {
      "type": "object",
      "properties": {
        "outlier_columns": {
          "type": "array",
          "items": {"type": "string"}
        },
        "outlier_counts": {
          "type": "object",
          "patternProperties": {
            ".*": {"type": "integer", "minimum": 0}
          }
        }
      }
    }
  }
}
